<script>
  const letters = document.querySelectorAll(".p-profession");
  letters.forEach((letter) => {
   
    const htmlLetter = letter as HTMLElement; 

    htmlLetter.addEventListener("mouseenter", () => {
      toggle(htmlLetter);
    });
  });

  function toggle(letter: HTMLElement) { 
    letter.classList.add("bouncing");
    letter.addEventListener("animationend", () => {
      letter.classList.remove("bouncing");
    });
  }
</script>

<style>
  .content-presentation {
    position: relative;
    width: 100%;
    height: 100%;
  }
  .linear-gradient-1 {
    position: absolute;
    left: 0;
    top: 0;
    width: 500px;
    height: 520px;
    background: radial-gradient(
      at left center,
      rgba(1, 190, 150, 0.5),
      transparent,
      transparent
    );
    z-index: 0;
  }
  .linear-gradient-2 {
    position: absolute;
    right: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
      at right center,
      rgba(1, 190, 150, 0.6),
      rgb(0, 0, 0),
      rgb(0, 0, 0)
    );
    z-index: 0;
  }

  .container-presentation {
    position: relative; 
    display: flex;
    flex-direction: row;
    padding: 50px 0;
    width: 90%;
    margin: 0 auto;
    max-width: 1355px;
  }
  .container-text {
    position: relative;
    width: 50%;
    color: #f6f6f9;
  }
  .text-hello {
    padding: 10px 0;
    font-size: 20px;
  }

  .text-name {
    padding: 5px 0;
    font-size: 30px;
    color: #01be96;
    font-weight: 800;
    letter-spacing: 1px;
    margin-top: 30px;
  }
  .container-profession {
    cursor: pointer;
    padding: 5px 0;
  }
  .p-profession {
    font-size: 30px;
    font-weight: 800;
    cursor: pointer;
    display: inline-block;
    text-transform: capitalize;
  }

  .bouncing {
    transition: 0.8s all;
    color: #01be96;
    animation: rubberband 400ms alternate ease-out;
  }

  @keyframes rubberband {
    10% {
      transform: scaleX(1);
    }
    40% {
      transform: scaleX(1.12) scaleY(0.75);
    }
    55% {
      transform: scaleX(0.85) scaleY(1);
    }
    75% {
      transform: scaleX(0.9) scaleY(1);
    }
    90% {
      transform: scaleX(1.85) scaleY(0.95);
    }
    100% {
      transform: scaleX(1) scaleY(1);
    }
  }

  .p-presentation {
    padding: 12px 0;
    font-size: 19px;
    width: 90%;
    text-align: left;
  }

  .container-curriculum {
    position: relative;
    padding: 40px 0;
    display: flex;
    gap: 20px;
  }
  .a-action {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px 30px;
    border: 1px solid #01be96;
    font-size: 18px;
    background-color: #01be96;
    text-decoration: none;
    color: #f6f6f9;
    transition: 0.3s;
  }
  .a-action:hover {
    transform: translateX(4px);
  }

  .a-curriculum {
