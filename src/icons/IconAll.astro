---
import IconAstro from "./IconAstro.astro";
import IconTypeScript from "./IconTypeScript.astro";
import IconHtml from "./IconHtml.astro";
import IconCss from "./IconCss.astro";
import IconReact from "./IconReact.astro";
import IconGit from "./IconGit.astro";
import IconGitHub from "./IconGtiHub.astro";  
import IconJavaScript from "./IconJavaScritp.astro";  // Correction de la faute d'orthographe
import IconNodeJs from "./IconNodeJs.astro";
import IconAngular from "./IconAngular.astro";
import IconWordpress from "./IconWordpress.astro";
import IconUnity from "./IconUnity.astro";
import IconC from "./IconC.astro";

// Définir un type pour les clés d'icônes
type IconKey = 
  | 'html'
  | 'css'
  | 'javaScript'
  | 'react'
  | 'astro'
  | 'typeScript'
  | 'git'
  | 'github'
  | 'nodejs'
  | 'angular'
  | 'wordpress'
  | 'unity'
  | 'c';

// Vérifiez que toutes les clés sont correctement définies et qu'il n'y a pas de fautes de frappe.
export const ICONS: Record<IconKey, (_props: Record<string, any>) => any> = {
  html: IconHtml,
  css: IconCss,
  javaScript: IconJavaScript,
  react: IconReact,
  astro: IconAstro,
  typeScript: IconTypeScript,
  git: IconGit,
  github: IconGitHub,
  nodejs: IconNodeJs,
  angular: IconAngular,
  wordpress: IconWordpress,
  unity: IconUnity,
  c: IconC,
};


export function getIconComponent(iconName: IconKey) {
  return ICONS[iconName] || null; 
}
